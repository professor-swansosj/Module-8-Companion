<?xml version="1.0" encoding="UTF-8"?>
<network_infrastructure>
  <organization>
    <name>FSCJ Network Lab</name>
    <domain>lab.fscj.edu</domain>
    <contact>
      <admin>network-admin@fscj.edu</admin>
      <phone>+1-904-555-0123</phone>
    </contact>
  </organization>

  <devices>
    <device id="RTR-001">
      <type>router</type>
      <vendor>Cisco</vendor>
      <model>ISR4331</model>
      <hostname>CORE-RTR-01</hostname>
      <management_ip>10.0.1.1</management_ip>
      <location>
        <building>Main Campus</building>
        <room>Network Operations Center</room>
        <rack>A1</rack>
        <position>U42</position>
      </location>
      <software>
        <os>IOS-XE</os>
        <version>16.12.04</version>
        <feature_set>universalk9</feature_set>
      </software>
      <interfaces>
        <interface>
          <name>GigabitEthernet0/0/0</name>
          <type>physical</type>
          <ip_address>192.168.1.1</ip_address>
          <subnet_mask>255.255.255.0</subnet_mask>
          <status>up</status>
          <description>LAN Interface - User Network</description>
        </interface>
        <interface>
          <name>GigabitEthernet0/0/1</name>
          <type>physical</type>
          <ip_address>203.0.113.2</ip_address>
          <subnet_mask>255.255.255.252</subnet_mask>
          <status>up</status>
          <description>WAN Interface - ISP Connection</description>
        </interface>
      </interfaces>
    </device>

    <device id="SW-001">
      <type>switch</type>
      <vendor>Cisco</vendor>
      <model>Catalyst 3850</model>
      <hostname>DIST-SW-01</hostname>
      <management_ip>10.0.1.10</management_ip>
      <location>
        <building>Main Campus</building>
        <room>Network Operations Center</room>
        <rack>A1</rack>
        <position>U38</position>
      </location>
      <software>
        <os>IOS-XE</os>
        <version>16.12.03</version>
        <feature_set>lanbase</feature_set>
      </software>
      <vlans>
        <vlan id="1">
          <name>default</name>
          <status>active</status>
        </vlan>
        <vlan id="10">
          <name>USERS</name>
          <status>active</status>
        </vlan>
        <vlan id="20">
          <name>SERVERS</name>
          <status>active</status>
        </vlan>
        <vlan id="30">
          <name>GUESTS</name>
          <status>active</status>
        </vlan>
        <vlan id="99">
          <name>MANAGEMENT</name>
          <status>active</status>
        </vlan>
      </vlans>
    </device>

    <device id="FW-001">
      <type>firewall</type>
      <vendor>Fortinet</vendor>
      <model>FortiGate 100F</model>
      <hostname>PERIMETER-FW-01</hostname>
      <management_ip>10.0.1.254</management_ip>
      <location>
        <building>Main Campus</building>
        <room>Security Operations Center</room>
        <rack>B2</rack>
        <position>U40</position>
      </location>
      <software>
        <os>FortiOS</os>
        <version>7.0.8</version>
      </software>
      <security_policies>
        <policy id="1">
          <name>LAN_to_WAN</name>
          <source_zone>internal</source_zone>
          <destination_zone>external</destination_zone>
          <action>allow</action>
          <logging>enabled</logging>
        </policy>
        <policy id="2">
          <name>BLOCK_SOCIAL_MEDIA</name>
          <source_zone>internal</source_zone>
          <destination_zone>external</destination_zone>
          <service>HTTP HTTPS</service>
          <action>deny</action>
          <logging>enabled</logging>
        </policy>
      </security_policies>
    </device>
  </devices>

  <network_topology>
    <connections>
      <connection id="1">
        <source>
          <device_id>RTR-001</device_id>
          <interface>GigabitEthernet0/0/0</interface>
        </source>
        <destination>
          <device_id>SW-001</device_id>
          <interface>GigabitEthernet1/0/1</interface>
        </destination>
        <cable_type>fiber</cable_type>
        <speed>1Gbps</speed>
      </connection>
      <connection id="2">
        <source>
          <device_id>SW-001</device_id>
          <interface>GigabitEthernet1/0/2</interface>
        </source>
        <destination>
          <device_id>FW-001</device_id>
          <interface>port1</interface>
        </destination>
        <cable_type>copper</cable_type>
        <speed>1Gbps</speed>
      </connection>
    </connections>
  </network_topology>

  <services>
    <dhcp>
      <scope name="Users">
        <network>192.168.10.0</network>
        <mask>255.255.255.0</mask>
        <range_start>192.168.10.100</range_start>
        <range_end>192.168.10.200</range_end>
        <gateway>192.168.10.1</gateway>
        <dns_servers>
          <server>8.8.8.8</server>
          <server>8.8.4.4</server>
        </dns_servers>
        <lease_time>86400</lease_time>
      </scope>
    </dhcp>

    <ntp>
      <servers>
        <server>pool.ntp.org</server>
        <server>time.nist.gov</server>
      </servers>
      <timezone>America/New_York</timezone>
    </ntp>

    <monitoring>
      <snmp>
        <version>v3</version>
        <security_name>netmon</security_name>
        <auth_protocol>SHA</auth_protocol>
        <priv_protocol>AES</priv_protocol>
      </snmp>
      <syslog>
        <server>10.0.1.100</server>
        <facility>local0</facility>
        <severity>informational</severity>
      </syslog>
    </monitoring>
  </services>

  <automation>
    <tools>
      <tool name="Ansible">
        <version>2.13</version>
        <inventory_file>/etc/ansible/hosts</inventory_file>
        <vault_file>/etc/ansible/vault.yml</vault_file>
      </tool>
      <tool name="NAPALM">
        <version>4.0.0</version>
        <supported_platforms>
          <platform>ios</platform>
          <platform>nxos</platform>
          <platform>eos</platform>
        </supported_platforms>
      </tool>
    </tools>
    
    <playbooks>
      <playbook name="device_backup">
        <schedule>daily</schedule>
        <retention_days>30</retention_days>
        <notification>true</notification>
      </playbook>
      <playbook name="compliance_check">
        <schedule>weekly</schedule>
        <policies_file>/etc/ansible/policies.yml</policies_file>
        <remediation>false</remediation>
      </playbook>
    </playbooks>
  </automation>
</network_infrastructure>